{
  "name": "shieldts",
  "version": "0.1.0",
  "description": "TypeScript security scanner that prevents builds with exposed secrets and vulnerabilities",
  "main": "dist/index.js",
  "bin": {
    "shieldts": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "security",
    "typescript",
    "secrets",
    "static-analysis",
    "build-security",
    "credentials",
    "vulnerability"
  ],
  "author": "Krystian Dudzinski",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CLI_preview.png",
    "html_preview.png"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "typescript": "^5.0.0",
    "glob": "^10.3.0",
    "chalk": "4.1.2",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
}
